<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="657dp"
        android:alpha="0.4"
        android:scaleType="centerCrop"
        android:src="@drawable/jiaaa"
        android:contentDescription="@null" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preguntas sobre las Ventas"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="16dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cómo puedo realizar una nueva venta?"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Respuesta 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para realizar una nueva venta, ve a la sección de 'Ventas' y presiona el botón 'Agregar Venta'. Luego, sigue las instrucciones en pantalla."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Pregunta 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cómo puedo ver las estadísticas de mis ventas?"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Respuesta 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para ver las estadísticas de tus ventas, dirígete a la sección de 'Ventas' y encontrarás la información detallada allí."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
