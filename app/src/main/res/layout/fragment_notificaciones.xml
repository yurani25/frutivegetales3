<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Notificación 1 - Manzanas -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivNotificacion1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notificacion"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNotificacion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Oferta especial en manzanas esta semana!"
                android:layout_toEndOf="@id/ivNotificacion1"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notificación 2 - Plátanos -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivNotificacion2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notificacion"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNotificacion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Descuento en plátanos frescos!"
                android:layout_toEndOf="@id/ivNotificacion2"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notificación 3 - Zanahorias -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivNotificacion3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notificacion"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNotificacion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Nuevas zanahorias orgánicas disponibles!"
                android:layout_toEndOf="@id/ivNotificacion3"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Notificación 4 - Uvas -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivNotificacion4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notificacion"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvNotificacion4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Variedades frescas de uvas en stock!"
                android:layout_toEndOf="@id/ivNotificacion4"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
