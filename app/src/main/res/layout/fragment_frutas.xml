<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <!-- Título "Frutas" -->
        <TextView
            android:id="@+id/frutasTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Frutas"
            android:padding="8dp"
            android:textStyle="bold"/>

        <!-- Primer producto de frutas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Imagen del primer producto de frutas -->
                <ImageView
                    android:id="@+id/frutaProductImage1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/lulos2" />

                <!-- Nombre del primer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductNameTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:text="lulos" />

                <!-- Precio del primer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductPriceTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="Precio: 4.000" />

                <!-- Descripción del primer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductDescriptionTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:text="El lulo es una fruta nativa de los Andes, cultivada y consumida principalmente en América Central. Es una fuente importante de proteína y minerales, y en especial de vitamina C. " />

                <!-- Icono para agregar al carrito del primer producto de frutas -->
                <ImageView
                    android:id="@+id/frutaAddToCartImageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:contentDescription="Agregar al carrito"
                    android:padding="8dp"
                    android:src="@drawable/shopping_cart" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Segundo producto de frutas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Imagen del segundo producto de frutas -->
                <ImageView
                    android:id="@+id/frutaProductImage2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/manzanas2"/>

                <!-- Nombre del segundo producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductNameTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:text="manzanas" />

                <!-- Precio del segundo producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductPriceTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="Precio: 6.000" />

                <!-- Descripción del segundo producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductDescriptionTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:text="La manzana es fuente de calcio y fósforo, indispensables en la formación de las sales minerales del hueso." />

                <!-- Icono para agregar al carrito del segundo producto de frutas -->
                <ImageView
                    android:id="@+id/frutaAddToCartImageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/shopping_cart"
                    android:padding="8dp"
                    android:contentDescription="Agregar al carrito" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tercer producto de frutas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Imagen del tercer producto de frutas -->
                <ImageView
                    android:id="@+id/frutaProductImage3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/banano" />

                <!-- Nombre del tercer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductNameTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="8dp"
                    android:text="bananos" />

                <!-- Precio del tercer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductPriceTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:padding="8dp"
                    android:text="Precio: 5.000" />

                <!-- Descripción del tercer producto de frutas -->
                <TextView
                    android:id="@+id/frutaProductDescriptionTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:text="El plátano es una fruta tropical procedente de la planta herbácea que recibe el mismo nombre o banano, perteneciente a la familia de las musáceas" />

                <!-- Icono para agregar al carrito del tercer producto de frutas -->
                <ImageView
                    android:id="@+id/frutaAddToCartImageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/shopping_cart"
                    android:padding="8dp"
                    android:contentDescription="Agregar al carrito" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
