<!-- res/layout/fragment_listaproductos.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Agrega un encabezado si lo deseas -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Productos"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="16dp"/>

    <!-- Agrega un ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Contenedor para los productos -->
            <LinearLayout
                android:id="@+id/productContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Puedes repetir este bloque para cada producto dinámicamente -->

                <!-- Botón de eliminación -->
                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_delete_24"
                    android:contentDescription="Eliminar Producto"/>

                <!-- Botón de edición -->
                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/baseline_edit_24"
                    android:contentDescription="Editar Producto"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</LinearLayout>
